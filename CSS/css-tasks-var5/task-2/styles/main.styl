*
  margin 0
  padding 0
  
batlogo = url(../imgs/logo.png)  

cleafix()
  &:after
    content ""
    display block
    clear both
  
body
  font-family sans-serif

  div#root
    clearfix()
    width 700px
  
    h1
      background-image batlogo
      background-size: 65px
      background-repeat: no-repeat
      background-position-y: 10px
      float right 
      text-align center
      color #983B33
      padding-left 90px
      margin-right 109px
      font-size 38px
      margin-top 15px
      letter-spacing: -0.01em
      
    ul.superheroes
      clearfix()
      
      li
        float left
        clear left
        margin-bottom 185px
        
        &:hover > div.description
          display block
        
        &:hover > img
          opacity 1
        
        > strong
          display block 
          position relative
          z-index 5
          color red
          width 230px
          height 50px
          background rgba(0, 0, 0, 0.5)
          
          > span
            display block
            font-weight bold
            text-align middle
            padding-top 10px
            padding-left 90px
            color #8D3B3F
            font-size 18px
            
        img
          width 230px
          position absolute
          margin-top -50px
          z-index 1
          opacity 0.5
        
        div.description
          display none
          position absolute
          left 240px
          top 100px
          
          p
            width 395px
            text-align justify
            text-indent: 25px
            
            strong 
